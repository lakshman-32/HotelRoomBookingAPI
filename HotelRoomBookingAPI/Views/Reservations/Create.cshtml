@model HotelRoomBookingAPI.Models.Web.Booking

@{
    ViewData["Title"] = "Confirm Your Booking";
    
    // Format time display
    string timeRange = "";
    if (Model.BookingStartDateTime.HasValue && Model.BookingEndDateTime.HasValue)
    {
        timeRange = $"{Model.BookingStartDateTime.Value:hh:mm tt} - {Model.BookingEndDateTime.Value:hh:mm tt}";
    }
    
    // Function to get image based on room type
    string GetRoomImage(string roomType)
    {
        var type = roomType?.ToLower() ?? "standard";
        if (type.Contains("suite") || type.Contains("deluxe")) return "https://images.unsplash.com/photo-1631049307264-da0ec9d70304?q=80&w=800&auto=format&fit=crop";
        if (type.Contains("single")) return "https://images.unsplash.com/photo-1631049552057-403cdb8f0658?q=80&w=800&auto=format&fit=crop";
        return "https://images.unsplash.com/photo-1618773928121-c32242e63f39?q=80&w=800&auto=format&fit=crop";
    }
}

<style>
    .booking-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 60px 0;
        margin: -20px -15px 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .booking-header::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 50%, rgba(255,255,255,0.15) 0%, transparent 60%);
        animation: pulse 4s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .booking-header h1 {
        color: white;
        font-size: 3rem;
        font-weight: 800;
        text-shadow: 0 4px 20px rgba(0,0,0,0.2);
        margin: 0;
        position: relative;
        z-index: 1;
    }
    
    .booking-card {
        background: white;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        max-width: 700px;
        margin: 0 auto;
    }
    
    .room-header {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        padding: 30px;
        border-bottom: 3px solid #667eea;
    }
    
    .building-name {
        color: #667eea;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 10px;
    }
    
    .room-info {
        color: #4a5568;
        font-size: 1.3rem;
        font-weight: 600;
    }
    
    .booking-details {
        padding: 30px;
    }
    
    .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
        border-bottom: 2px solid #f7fafc;
    }
    
    .detail-row:last-child {
        border-bottom: none;
    }
    
    .detail-label {
        font-size: 14px;
        text-transform: uppercase;
        color: #a0aec0;
        font-weight: 700;
        letter-spacing: 1px;
    }
    
    .detail-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2d3748;
    }
    
    .time-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px 25px;
        border-radius: 50px;
        font-weight: 700;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .info-box {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-left: 5px solid #667eea;
        border-radius: 15px;
        padding: 20px 25px;
        margin: 30px 0;
    }
    
    .info-box p {
        margin: 0;
        color: #4a5568;
        font-weight: 600;
    }
    
    .btn-confirm {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 15px;
        padding: 18px;
        font-size: 18px;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        width: 100%;
    }
    
    .btn-confirm:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
        color: white;
    }
    
    .btn-cancel {
        background: white;
        color: #718096;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        padding: 16px;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
        text-decoration: none;
        display: block;
        text-align: center;
    }
    
    .btn-cancel:hover {
        border-color: #667eea;
        color: #667eea;
        background: rgba(102, 126, 234, 0.05);
    }
    
    .validation-error {
        background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
        color: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 6px 20px rgba(235, 51, 73, 0.3);
    }
    
    @@media (max-width: 768px) {
        .booking-header h1 {
            font-size: 2rem;
        }
        .building-name {
            font-size: 1.5rem;
        }
    }
</style>

<div class="container" style="max-width: 1000px; margin-top: 40px;">
    <h2 style="color: #2c3e50; font-weight: 700; margin-bottom: 25px; font-size: 1.8rem;">
        <i class="bi bi-check-circle"></i> Confirm Your Booking
    </h2>
    <div class="row">
        <!-- Left Column: Room Image and Details -->
        <div class="col-md-6">
            <!-- Room Image -->
            <div style="background: white; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 40px rgba(0,0,0,0.08); margin-bottom: 20px; position: relative; cursor: pointer;" 
                 data-bs-toggle="modal" data-bs-target="#roomImageModal">
                <img src="@GetRoomImage(Model.Room?.RoomType?.RoomTypeName ?? "")" 
                     style="width: 100%; height: 280px; object-fit: cover;" 
                     alt="Room Image">
                <div style="position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.6); color: white; padding: 6px 12px; border-radius: 8px; font-size: 0.75rem;">
                    <i class="bi bi-zoom-in"></i> Click to view
                </div>
                <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(to top, rgba(0,0,0,0.9), transparent); padding: 25px 20px 15px; color: white;">
                    <div style="font-size: 1.4rem; font-weight: 700;">@Model.Room?.RoomType?.RoomTypeName</div>
                    <div style="font-size: 1rem; font-weight: 600; opacity: 0.9;">Room @Model.Room?.RoomNumber</div>
                </div>
            </div>
            
            <!-- Room Details Card -->
            <div style="background: white; border-radius: 20px; padding: 25px; box-shadow: 0 10px 40px rgba(0,0,0,0.08);">
                <h5 style="color: #667eea; font-weight: 700; margin-bottom: 20px; font-size: 1.3rem;">
                    <i class="bi bi-info-circle"></i> Room Details
                </h5>
                
                <div style="border-bottom: 2px solid #f7fafc; padding-bottom: 12px; margin-bottom: 12px;">
                    <div style="font-size: 13px; text-transform: uppercase; color: #a0aec0; font-weight: 600; margin-bottom: 4px; letter-spacing: 0.5px;">BUILDING</div>
                    <div style="font-size: 1.15rem; font-weight: 600; color: #2d3748;">@Model.Room?.Building?.Building_Name</div>
                </div>
                
                <div style="border-bottom: 2px solid #f7fafc; padding-bottom: 12px; margin-bottom: 12px;">
                    <div style="font-size: 13px; text-transform: uppercase; color: #a0aec0; font-weight: 600; margin-bottom: 4px; letter-spacing: 0.5px;">LOCATION</div>
                    <div style="font-size: 1.15rem; font-weight: 600; color: #2d3748;">@Model.Room?.Building?.Building_Location</div>
                </div>
                
                <div style="border-bottom: 2px solid #f7fafc; padding-bottom: 12px; margin-bottom: 12px;">
                    <div style="font-size: 13px; text-transform: uppercase; color: #a0aec0; font-weight: 600; margin-bottom: 4px; letter-spacing: 0.5px;">FLOOR</div>
                    <div style="font-size: 1.15rem; font-weight: 600; color: #2d3748;">@Model.Room?.Floor?.FloorNumber</div>
                </div>
                
                <div style="border-bottom: 2px solid #f7fafc; padding-bottom: 12px; margin-bottom: 12px;">
                    <div style="font-size: 13px; text-transform: uppercase; color: #a0aec0; font-weight: 600; margin-bottom: 4px; letter-spacing: 0.5px;">CAPACITY</div>
                    <div style="font-size: 1.15rem; font-weight: 600; color: #2d3748;">@Model.Room?.RoomType?.Capacity Guests</div>
                </div>
                
                <div>
                    <div style="font-size: 13px; text-transform: uppercase; color: #a0aec0; font-weight: 600; margin-bottom: 8px; letter-spacing: 0.5px;">STATUS</div>
                    <span style="background: #38ef7d; color: white; padding: 4px 12px; border-radius: 12px; font-size: 0.8rem; font-weight: 600; display: inline-block;">Available</span>
                </div>
            </div>
        </div>
        
        <!-- Right Column: Booking Details -->
        <div class="col-md-6">
            <div class="booking-card">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-error">
                        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                    </div>
                }
                
                <div class="room-header">
                    <h2 class="building-name">
                        <i class="bi bi-building"></i> @Model.Room?.Building?.Building_Name
                    </h2>
                    <p class="room-info">
                        @Model.Room?.RoomType?.RoomTypeName - Room @Model.Room?.RoomNumber
                    </p>
                </div>
                
                <div class="booking-details">
                    <h5 style="color: #667eea; font-weight: 700; margin-bottom: 25px; font-size: 1.1rem;">
                        <i class="bi bi-calendar-check"></i> Booking Details
                    </h5>
                    
                    <div class="detail-row">
                        <div>
                            <div class="detail-label">
                                <i class="bi bi-calendar-check"></i> Check-In Date
                            </div>
                            <div class="detail-value">@Model.CheckInDate.ToString("dddd, MMMM dd, yyyy")</div>
                            @if (Model.BookingStartDateTime.HasValue)
                            {
                                <div style="margin-top: 10px;">
                                    <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 6px 16px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; display: inline-block; box-shadow: 0 3px 10px rgba(102, 126, 234, 0.3);">
                                        <i class="bi bi-clock"></i> Check-In Time: @Model.BookingStartDateTime.Value.ToString("hh:mm tt")
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="detail-row">
                        <div>
                            <div class="detail-label">
                                <i class="bi bi-calendar-x"></i> Check-Out Date
                            </div>
                            <div class="detail-value">@Model.CheckOutDate.ToString("dddd, MMMM dd, yyyy")</div>
                            @if (Model.BookingEndDateTime.HasValue)
                            {
                                <div style="margin-top: 10px;">
                                    <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 6px 16px; border-radius: 20px; font-size: 0.9rem; font-weight: 600; display: inline-block; box-shadow: 0 3px 10px rgba(102, 126, 234, 0.3);">
                                        <i class="bi bi-clock"></i> Check-Out Time: @Model.BookingEndDateTime.Value.ToString("hh:mm tt")
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="info-box">
                        <p>
                            <i class="bi bi-info-circle"></i> 
                            Please review your booking details carefully before confirming.
                        </p>
                    </div>
                    
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="RoomId" />
                        <input type="hidden" asp-for="CheckInDate" />
                        <input type="hidden" asp-for="CheckOutDate" />
                        <input type="hidden" asp-for="BookingStartDateTime" />
                        <input type="hidden" asp-for="BookingEndDateTime" />
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <button type="submit" class="btn-confirm">
                                    <i class="bi bi-check-circle"></i> Confirm Booking
                                </button>
                            </div>
                            <div class="col-12">
                                <a asp-controller="Rooms" asp-action="Available" class="btn-cancel">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Room Image Modal -->
<div class="modal fade" id="roomImageModal" tabindex="-1" aria-labelledby="roomImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="background: transparent; border: none;">
            <div class="modal-header" style="border: none; padding: 10px;">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="background-color: rgba(0,0,0,0.5); border-radius: 50%; padding: 10px;"></button>
            </div>
            <div class="modal-body" style="padding: 0; position: relative;">
                <img src="@GetRoomImage(Model.Room?.RoomType?.RoomTypeName ?? "")" 
                     style="width: 100%; height: auto; border-radius: 15px;" 
                     alt="Room Image">
                <div style="position: absolute; bottom: 30px; left: 30px; color: white; text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
                    <h3 style="font-weight: 700; margin-bottom: 5px;">@Model.Room?.RoomType?.RoomTypeName</h3>
                    <p style="font-size: 1.2rem; margin: 0;">Room @Model.Room?.RoomNumber</p>
                </div>
            </div>
        </div>
    </div>
</div>


